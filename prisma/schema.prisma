generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  documentIDs String[]
  namespace   String
}

model Document {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  namespace String
}
